[build-system]
requires = ["hatchling"]
build-backend = "hatchling.build"

[project]
name = "dropsync"
version = "0.1.0"
description = "Local-first capture → enrich → sync companion for Syncthing"
readme = "README.md"
requires-python = ">=3.11"
license = {text = "BSD-2-Clause"}
authors = [
  {name = "W. Appleton", email = "will@accelerated.industries"},
]
keywords = ["syncthing", "capture", "readability", "yt-dlp", "local-first"]
classifiers = [
  "Development Status :: 4 - Beta",
  "License :: OSI Approved :: BSD License",
  "Programming Language :: Python",
  "Programming Language :: Python :: 3",
  "Programming Language :: Python :: 3.11",
  "Programming Language :: Python :: 3.12",
  "Framework :: AsyncIO",
  "Framework :: FastAPI",
  "Topic :: Internet :: WWW/HTTP",
  "Topic :: Utilities",
]
dependencies = [
  "fastapi>=0.110,<1.0",
  "uvicorn[standard]>=0.27,<0.28",
  "dbus-next>=0.4,<0.5",
  "typer>=0.12,<0.13",
  "pydantic>=2.6,<3.0",
  "rich>=13.7,<14.0",
  "httpx>=0.27,<0.28",
]

[project.optional-dependencies]
extra = [
  "pyyaml>=6.0,<7.0",
]
dev = [
  "black>=24.4,<25.0",
  "ruff>=0.4.2,<0.5",
  "mypy>=1.9,<2.0",
  "pytest>=8.1,<9.0",
  "pytest-asyncio>=0.23,<0.24",
  "httpx>=0.27,<0.28",
]

[project.scripts]
dropsync = "dropsync.cli:app"
dropsyncd = "dropsync.cli:run_daemon"

[tool.hatch.build]
exclude = [".github", "tests"]
include = [
  "systemd",
  "examples",
  "scripts",
  "RELEASE_TEMPLATE.md",
]

[tool.black]
line-length = 100

[tool.ruff]
line-length = 100
select = ["E", "F", "B", "W", "I", "N" ]
ignore = ["E501"]

[tool.ruff.format]
quote-style = "double"
indent-style = "space"

[tool.mypy]
python_version = "3.11"
show_error_codes = true
strict = true
warn_unreachable = true
warn_no_return = true
plugins = []
